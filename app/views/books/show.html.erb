<h1><%= @book.title %></h1>
<img src="<%= @book.image %>" alt="<% @book.title %>" width="400" height="500" class="author_image"> <br>

<section class="book_info">
  <p><b>Authors: </b>
    <% @book.authors.each do |a| %>
    <%= link_to a.name, author_path(a) %>
    <% end %>
  </p>
  <p><b>Page Count: </b>
      <%= @book.page_count %>
  </p>
  <p><b>Publishing Year:</b>
      <%= @book.year %>
    </p>
</section>

<section id="book_stats">
   <h3>Book Statistics</h3>
   <h4 id='avg_rating'> Average Rating: <%= @book.average_rating %> </h4>

  <article id = 'top_three'>
    <h4>Top 3 Reviews</h4>
    <% @top_three_reviews.each do |r| %>
    <p class = "review"> User: <%= link_to r.user.username, user_path(r.user) %>,
    Review: <%= r.title %>,
    Rating: <%= r.rating %>
    <% end %> </p>
  </article>

  <article id = 'bottom_three'>
    <h4>Bottom 3 Reviews</h4>
    <% @bottom_three_reviews.each do |r| %>
    <p> User: <%= link_to r.user.username, user_path(r.user) %>,
    Review: <%= r.title %>,
    Rating: <%= r.rating %>
    <% end %> </p>
  </article>

  <%= button_to "Delete this book", book_path(@book), method: :delete, class:"user_button" %>
</section>


<section id='reviews'>
  <%= button_to "Add new review", new_book_review_path(@book), method: :get, class:"user_button" %>
  <h3>Reviews: </h3>
  <% @book.reviews.each do |r| %>
  <ul class ="review">
    <li>Reviewer: <%= link_to r.user.username, user_path(r.user) %> </li>
    <li><%= r.title %></li>
    <li>Rating: <%= r.rating %></li>
    <li><%= r.review_text %></li>
  </ul> <% end %>
</section>
